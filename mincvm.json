{
  "variables": {
    "disk_size": "16384",
    "minc-toolkit-v2": "http://packages.bic.mni.mcgill.ca/minc-toolkit/Debian/minc-toolkit-1.9.11-20160202-Ubuntu_15.04-x86_64.deb",
    "minc-toolkit-v1": "http://packages.bic.mni.mcgill.ca/minc-toolkit/Debian/minc-toolkit-1.0.07-20150714-Ubuntu_15.04-x86_64.deb",
    "RMINC": "https://github.com/Mouse-Imaging-Centre/RMINC/releases/download/1.4.3.2/RMINC_1.4.3.2.tar.gz",
    "bic-mni-models": "http://packages.bic.mni.mcgill.ca/minc-toolkit/Debian/bic-mni-models-0.1.1-20120421.deb",
    "beast-library": "http://packages.bic.mni.mcgill.ca/minc-toolkit/Debian/beast-library-1.1.0-20121212.deb",
    "rstudio": "https://download1.rstudio.org/rstudio-0.99.903-amd64.deb",
    "pyminc": "https://github.com/Mouse-Imaging-Centre/pyminc/archive/v0.48.tar.gz",
    "minc-stuffs": "v0.1.16",
    "pyezminc": "https://github.com/BIC-MNI/pyezminc/archive/release-1.1.00.tar.gz",
    "quarter": "https://github.com/Alexpux/Quarter/archive/master.tar.gz",
    "bicinventor": "https://github.com/BIC-MNI/bicInventor/archive/master.tar.gz",
    "brain-view2": "https://github.com/Mouse-Imaging-Centre/brain-view2/archive/master.tar.gz",
    "itksnap-MINC": "http://www.bic.mni.mcgill.ca/~vfonov/temp/itksnap-3.4.0-20151130-Linux-x86_64-qt4.tar.gz",
    "mni-cortical-statistics": "https://github.com/BIC-MNI/mni.cortical.statistics/archive/ver-0_9_5.tar.gz",
    "generate_deformation_fields": "https://github.com/Mouse-Imaging-Centre/generate_deformation_fields/archive/1.0.tar.gz",
    "nipype": "0.12.1",
    "Display": "https://github.com/BIC-MNI/Display/releases/download/display_2.0.5/mni-display_2.0-5.deb",
    "pydpiper": "https://github.com/Mouse-Imaging-Centre/pydpiper/archive/v2.0.4.tar.gz",
    "bpipe": "https://github.com/ssadedin/bpipe/releases/download/0.9.9.2/bpipe-0.9.9.2.tar.gz"
  },
  "push": {
    "name": "CoBrALab/minc-toolkit-v2-vm",
    "vcs": true,
    "exclude": ["output-amd64-virtualbox", "packer_cache"]
  },
  "builders": [
    {
      "name": "mincvm-virtualbox",
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "guest_additions_mode": "attach",
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.1.8/VBoxGuestAdditions_5.1.8.iso",
      "guest_additions_sha256": "347fd39df6ddee8079ad41fbc038e2fb64952a40255d75292e8e49a0a0cbf657",
      "headless": false,
      "format": "ova",
      "http_directory": ".",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"],
        ["modifyvm", "{{.Name}}", "--vram", "16"],
        ["modifyvm", "{{.Name}}", "--accelerate3d", "off"]
      ],
      "vboxmanage_post":[
        ["modifyhd", "output-mincvm-virtualbox/{{.Name}}.vdi", "--compact"],
        ["modifyvm", "{{.Name}}", "--accelerate3d", "on"]
      ],
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "iso_url": "http://archive.ubuntu.com/ubuntu/dists/xenial/main/installer-amd64/current/images/netboot/mini.iso",
      "iso_checksum": "902731a64bf54a057ba266a32de5fbcc4c494fcf",
      "iso_checksum_type": "sha1",
      "ssh_username": "minc",
      "ssh_password": "minc",
      "ssh_wait_timeout": "120m",
      "boot_wait": "5s",
      "boot_command": [
        "<tab><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "linux initrd=initrd.gz",
        " auto=true",
        " priority=critical",
        " url=http://{{.HTTPIP}}:{{.HTTPPort}}/lubuntu-16.04-preseed.txt",
        " hostname=mincvm",
        " DEBCONF_DEBUG=5",
        "<enter>"
      ],
      "shutdown_command": "echo 'minc' | sudo -S shutdown -P now"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'minc' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "scripts": ["virtualaddons.sh", "provision.sh"],
      "environment_vars": ["minc_toolkit_v2={{user `minc-toolkit-v2`}}",
      "minc_toolkit_v1={{user `minc-toolkit-v1`}}", "RMINC={{user `RMINC`}}",
      "bic_mni_models={{user `bic-mni-models`}}",
      "beast_library={{user `beast-library`}}", "rstudio={{user `rstudio`}}",
      "pyminc={{user `pyminc`}}", "minc_stuffs={{user `minc-stuffs`}}",
      "pyezminc={{user `pyezminc`}}", "quarter={{user `quarter`}}",
      "bicinventor={{user `bicinventor`}}", "brain_view2={{user `brain-view2`}}",
      "itksnap_minc={{user `itksnap-MINC`}}", "mni_cortical_statistics={{user `mni-cortical-statistics`}}",
      "generate_deformation_fields={{user `generate_deformation_fields`}}","nipype={{user `nipype`}}",
      "mni_display={{user `Display`}}", "pydpiper={{user `pydpiper`}}",
      "bpipe={{user `bpipe`}}"]
    }
  ],

  "post-processors": [
    {
      "type": "compress",
      "output": "{{.BuildName}}.zip"
    },
    {
      "type": "atlas",
      "artifact": "CoBrALab/MINC-VM",
      "artifact_type": "virtualbox.image",
      "metadata": {
        "created_at": "{{timestamp}}"
      }
    }
  ]

}
